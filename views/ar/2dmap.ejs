      var ispopup = false;
      function popUpEvent() {
        if (ispopup == true) {
          document.body.removeChild(document.getElementById("popup"));
          ispopup = false;
          return;
        }

        ispopup = true;
        var popup = document.createElement("div");
        popup.id = "popup"
        popup.className = "container"
        popup.style = "position:fixed;left:40%;right:40%;top:15%;z-index:10; width:300px";
        popup.innerHTML = '\
